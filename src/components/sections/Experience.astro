---
import Section from "@/components/Section.astro";

import { work } from "@cv";
---

<Section title="Experience">
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary, url }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a
                      href={url}
                      title="See project"
                      target="_blank"
                      class="title-in-section"
                    >
                      {name}
                    </a>
                  </h3>
                  <h4 class="work-position">{position}</h4>
                </div>
                <time class="work-period">
                  {startDate} - {endDate}
                </time>
              </header>

              <footer>
                <p class="desc">{summary}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .title-in-section {
    font-weight: 500;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }

  [data-title]:after {
    content: attr(data-title);
    background-color: #333;
    color: #fff;
    font-size: 0.75rem;
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      monospace;
    position: absolute;
    padding: 0.2rem 0.5rem;
    bottom: -1.4rem;
    left: 50%;
    white-space: nowrap;
    box-shadow: 1px 1px 1px #222222;
    opacity: 0;
    border: 1px solid #111111;
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
  }

  [data-title] {
    position: relative;
  }

  @media (width <= 700px) {
    .work-period {
      text-align: right;
    }
  }
</style>
